<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2"
    android:orientation="vertical">


    <LinearLayout
        style="@style/changePwdItemLL"
        android:layout_marginTop="8dp">

        <TextView
            style="@style/changePwdItemLeftTv"
            android:text="原密码" />

        <EditText
            android:id="@+id/et_old_password"
            android:maxLength="16"
            style="@style/changePwdItemRightTv"
            android:hint="请输入原密码" />
    </LinearLayout>

    <include layout="@layout/line_margin" />

    <LinearLayout style="@style/changePwdItemLL">

        <TextView
            style="@style/changePwdItemLeftTv"
            android:text="新密码" />

        <EditText
            android:id="@+id/et_new_password"
            style="@style/changePwdItemRightTv"
            android:maxLength="16"
            android:hint="请输入新密码" />
    </LinearLayout>

    <include layout="@layout/line_margin" />

    <LinearLayout style="@style/changePwdItemLL">

        <TextView
            style="@style/changePwdItemLeftTv"
            android:text="确认密码" />

        <EditText
            android:id="@+id/et_affirm_password"
            android:maxLength="16"
            style="@style/changePwdItemRightTv"
            android:hint="请确认新密码" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/setting_button_corner_select"
        android:text="@string/confirm"
        android:textColor="@color/white" />

</LinearLayout>