<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/red" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="@dimen/default_line_height"
        android:left="3dp"
        android:right="@dimen/default_line_height"
        android:top="@dimen/default_line_height">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>